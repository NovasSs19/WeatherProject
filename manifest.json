{
    "name": "Weather App",
    "short_name": "Weather",
    "description": "A simple weather application with camera functionality",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#ffffff",
    "theme_color": "#2196F3",
    "permissions": [
        "camera",
        "geolocation",
        "notifications"
    ],
    "icons": [
        {
            "src": "images/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "images/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "orientation": "portrait",
    "scope": "/",
    "prefer_related_applications": false
}
